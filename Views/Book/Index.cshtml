@model IEnumerable<BookDTO>;

<table class="table">
  <thead>
    <tr>
      @* <th scope="col">id</th> *@
      <th scope="col">title</th>
      <th scope="col">author</th>
      <th scope="col">price</th>
      <th scope="col">avg rating</th>
      <th scope="col">-</th>
    </tr>
  </thead>
  <tbody>
    @foreach(BookDTO book in Model){
        <tr>
            @* <th scope="row">@book.Id</th> *@
            <td>@book.Title</td>
            <td>@book.author</td>
            <td>@book.Price</td>
            <td>@book.AverageRating</td>
            <td class="btns">
                <a class="btn btn-primary" asp-action="Details" asp-controller="book" asp-route-id="@book.Id">Details</a>
            </td>
        </tr>
    }
  </tbody>
</table>
