@model BookDTO;

<table class="table">
  <thead>
    <tr>
      @* <th scope="col">id</th> *@
      <th scope="col">title</th>
      <th scope="col">author</th>
      <th scope="col">price</th>
      <th scope="col">avg rating</th>
      <th scope="col"> - </th>
    </tr>
  </thead>
  <tbody>
    <tr>
        @* <th scope="row">@book.Id</th> *@
        <td>@Model.Title</td>
        <td>@Model.author</td>
        <td>@Model.Price</td>
        <td>@Model.AverageRating</td>
        <td class="btns">
            <button class="btn btn-primary addBtn" onclick="AddBtn(@Model.Id, @Model.Price)"> add to cart</button>
        </td>
    </tr>
  </tbody>
</table>

@* ajax add book to cart  *@

<script>
  function AddBtn(bookId, price) {
    $.ajax({
      url: "/book/addtocart",
      type : "post",
      data : {
        BookId : bookId,
        Quantity : 1,
        Price : price,
      },
      success : function(response) {
        alert(response);
      },
      error : function(error) {
        console.log(error);
      }
    });
    
  }
</script>